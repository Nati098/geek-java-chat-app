<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

   <stylesheets>
      <URL value="@/css/style.css" />
   </stylesheets>

   <center>
      <BorderPane>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         
         <center>
            <ScrollPane fitToWidth="true" fitToHeight="true">
               <content>
                  <TextArea fx:id="taChat" editable="false" />
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </center>

   <bottom>
      <BorderPane>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         <center>
            <TextField fx:id="tfMessage" onAction="#onActionTfMessage" />
         </center>
         <right>
            <Button fx:id="btnSend" BorderPane.alignment="CENTER" contentDisplay="CENTER" onAction="#onActionBtnSend" text="Send"/>
         </right>
      </BorderPane>
   </bottom>


</BorderPane>
